<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_card_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/home_card_height"
    app:cardCornerRadius="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:context=".RedoMainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="7dp">

        <TextView
            android:id="@+id/home_card_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="@dimen/home_card_title_font_size"
            android:textStyle="bold"
            tools:text="Shopping"/>

        <View
            android:id="@+id/home_card_item_category_colour"
            android:layout_width="40dp"
            android:layout_height="3.5dp"
            android:layout_above="@+id/imageButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            tools:background="@color/red_500"/>


        <TextView
            android:id="@+id/home_card_item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/home_card_item_category_colour"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/imageButton"
            android:layout_toStartOf="@id/imageButton"
            android:textSize="17sp"
            android:textStyle="normal"
            tools:text="11 Items"/>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/more"
            app:srcCompat="@drawable/ic_more"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>